{
  "name": "schaltwerk-mcp-server",
  "version": "1.0.0",
  "description": "Schaltwerk MCP Server - TypeScript implementation for session management",
  "type": "module",
  "bin": {
    "schaltwerk-mcp-server": "./build/schaltwerk-mcp-server.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/schaltwerk-mcp-server.js",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf build node_modules package-lock.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "node-fetch": "^3.3.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "node-fetch": "<rootDir>/test/mocks/node-fetch.js"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(node-fetch)/)"
    ],
    "testMatch": [
      "**/src/**/*.test.ts",
      "**/test/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/*.d.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testTimeout": 10000
  }
}
