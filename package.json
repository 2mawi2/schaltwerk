{
  "name": "schaltwerk",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit --skipLibCheck && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "tsc --noEmit",
    "lint:rust": "cd src-tauri && CARGO_TERM_COLOR=never cargo clippy -q -- -D warnings",
    "test:frontend": "FORCE_COLOR=0 vitest run --silent --reporter=dot",
    "test:frontend:coverage": "vitest run --coverage",
    "coverage:report": "node scripts/coverage-report.js",
    "coverage:rust:run": "mkdir -p coverage && (cd src-tauri && rustup component add llvm-tools-preview && cargo install cargo-llvm-cov --locked -q) && (cd src-tauri && cargo llvm-cov --lcov --output-path ../coverage/rust-lcov.info)",
    "coverage:rust:report": "node scripts/coverage-report-rust.js",
    "coverage:rust": "npm run coverage:rust:run && npm run coverage:rust:report",
    "coverage:all": "npm run test:frontend:coverage && npm run coverage:report && npm run coverage:rust",
    "test:frontend:watch": "vitest",
    "test:rust": "cd src-tauri && CARGO_TERM_COLOR=never RUST_LOG=warn cargo test -q",
    "test": "npm run lint && npm run lint:rust && npm run test:frontend && npm run test:rust && npm run build:rust",
    "coverage": "npm run test:frontend:coverage && npm run coverage:report",
    "build:rust": "cd src-tauri && CARGO_TERM_COLOR=never cargo build -q",
    "check": "npm run test"
  },
  "dependencies": {
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-markdown": "^6.3.4",
    "@codemirror/language": "^6.11.3",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-dialog": "^2.3.2",
    "@types/diff": "^7.0.2",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@uiw/react-codemirror": "^4.25.1",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-webgl": "^0.18.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "diff": "^8.0.2",
    "highlight.js": "^11.11.1",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-split": "^2.0.14",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.4.17",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "terser": "^5.43.1",
    "typescript": "~5.9.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.4"
  }
}
