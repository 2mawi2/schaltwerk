{
  "name": "schaltwerk",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "tsc --noEmit",
    "lint:rust": "cd src-tauri && cargo clippy -- -D warnings",
    "test:frontend": "vitest run",
    "test:frontend:coverage": "vitest run --coverage",
    "coverage:report": "node scripts/coverage-report.js",
    "coverage:rust:run": "mkdir -p coverage && (cd src-tauri && rustup component add llvm-tools-preview && cargo install cargo-llvm-cov --locked -q) && (cd src-tauri && cargo llvm-cov --lcov --output-path ../coverage/rust-lcov.info)",
    "coverage:rust:report": "node scripts/coverage-report-rust.js",
    "coverage:rust": "npm run coverage:rust:run && npm run coverage:rust:report",
    "coverage:all": "npm run test:frontend:coverage && npm run coverage:report && npm run coverage:rust",
    "test:frontend:watch": "vitest",
    "test:rust": "cd src-tauri && cargo test",
    "test": "npm run lint && npm run lint:rust && npm run test:frontend && npm run test:rust && npm run build:rust",
    "coverage": "npm run test:frontend:coverage && npm run coverage:report",
    "build:rust": "cd src-tauri && cargo build",
    "check": "npm run test"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-opener": "^2.4.0",
    "@types/highlight.js": "^9.12.4",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "highlight.js": "^11.11.1",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-diff-viewer-continued": "^4.0.6",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-split": "^2.0.14",
    "tailwindcss": "^3.4.17",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.7.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "terser": "^5.43.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.4"
  }
}
