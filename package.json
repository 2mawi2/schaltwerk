{
  "name": "schaltwerk",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit --skipLibCheck && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "SCHALTWERK_START_DIR=$HOME tauri dev",
    "lint": "eslint src scripts --ext .ts,.tsx,.js",
    "lint:ts": "tsc --noEmit",
    "lint:rust": "cd src-tauri && cargo clippy --message-format=short -- -D warnings",
    "test:frontend": "FORCE_COLOR=0 vitest run --silent --reporter=dot --exclude='**/*.{bench,performance}.test.{ts,tsx}'",
    "test:frontend:coverage": "vitest run --coverage --exclude='**/*.{bench,performance}.test.{ts,tsx}'",
    "test:frontend:watch": "vitest --exclude='**/*.{bench,performance}.test.{ts,tsx}'",
    "test:rust": "cd src-tauri && CARGO_TERM_COLOR=never RUST_LOG=warn cargo test -q -- --skip 'test_benchmark'",
    "test": "npm run lint && npm run lint:ts && npm run lint:rust && npm run test:frontend && npm run test:rust && npm run build:rust",
    "test:fast": "npm run lint & npm run lint:ts & npm run test:frontend & wait && npm run lint:rust && npm run test:rust && npm run build:rust",
    "benchmark:frontend": "FORCE_COLOR=0 vitest run --silent --reporter=dot src/tests/performance.test.tsx src/utils/diff.bench.test.ts src/components/diff/UnifiedDiffModal.performance.test.tsx",
    "benchmark:rust": "cd src-tauri && CARGO_TERM_COLOR=never cargo test --release 'test_benchmark' -- --nocapture",
    "benchmark": "npm run lint && npm run lint:rust && npm run benchmark:frontend && npm run benchmark:rust && npm run build:rust",
    "coverage:report": "node scripts/coverage-report.js",
    "coverage:rust:run": "mkdir -p coverage && (cd src-tauri && rustup component add llvm-tools-preview && cargo install cargo-llvm-cov --locked -q) && (cd src-tauri && cargo llvm-cov --lcov --output-path ../coverage/rust-lcov.info)",
    "coverage:rust:report": "node scripts/coverage-report-rust.js",
    "coverage:rust": "npm run coverage:rust:run && npm run coverage:rust:report",
    "coverage:all": "npm run test:frontend:coverage && npm run coverage:report && npm run coverage:rust",
    "coverage": "npm run test:frontend:coverage && npm run coverage:report",
    "build:rust": "cd src-tauri && cargo build --message-format=short",
    "check": "npm run test"
  },
  "dependencies": {
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-markdown": "^6.3.4",
    "@codemirror/language": "^6.11.3",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "^2.3.3",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@uiw/codemirror-themes": "^4.25.1",
    "@uiw/react-codemirror": "^4.25.1",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-webgl": "^0.18.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "highlight.js": "^11.11.1",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-split": "^2.0.14",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.12",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "happy-dom": "^18.0.1",
    "terser": "^5.43.1",
    "typescript": "~5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
