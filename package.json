{
  "name": "schaltwerk",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "author": "Schaltwerk Contributors",
  "description": "AI-powered git worktree session manager for isolated development environments",
  "repository": {
    "type": "git",
    "url": "https://github.com/schaltwerk/schaltwerk.git"
  },
  "bugs": {
    "url": "https://github.com/schaltwerk/schaltwerk/issues"
  },
  "homepage": "https://github.com/schaltwerk/schaltwerk#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit --skipLibCheck && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "SCHALTWERK_START_DIR=$HOME tauri dev",
    "lint": "eslint src scripts --ext .ts,.tsx,.js",
    "lint:ts": "tsc --noEmit",
    "lint:rust": "cd src-tauri && cargo clippy --message-format=short -- -D warnings",
    "test:frontend": "FORCE_COLOR=0 vitest run --silent --reporter=dot",
    "test:frontend:coverage": "vitest run --coverage",
    "test:frontend:watch": "vitest",
    "test:rust": "cd src-tauri && CARGO_TERM_COLOR=never RUST_LOG=warn cargo test -q",
    "test": "npm run lint && npm run lint:ts && npm run lint:rust && npm run test:frontend && npm run test:rust && npm run build:rust",
    "test:fast": "npm run lint & npm run lint:ts & npm run test:frontend & wait && npm run lint:rust && npm run test:rust && npm run build:rust",
    "coverage:report": "node scripts/coverage-report.js",
    "coverage:rust:run": "mkdir -p coverage && (cd src-tauri && rustup component add llvm-tools-preview && cargo install cargo-llvm-cov --locked -q) && (cd src-tauri && cargo llvm-cov --lcov --output-path ../coverage/rust-lcov.info)",
    "coverage:rust:report": "node scripts/coverage-report-rust.js",
    "coverage:rust": "npm run coverage:rust:run && npm run coverage:rust:report",
    "coverage:all": "npm run test:frontend:coverage && npm run coverage:report && npm run coverage:rust",
    "coverage": "npm run test:frontend:coverage && npm run coverage:report",
    "build:rust": "cd src-tauri && cargo build --message-format=short",
    "check": "npm run test",
    "migrate-events": "node scripts/migrate-events.cjs",
    "validate-migration": "node scripts/validate-migration.cjs"
  },
  "overrides": {},
  "dependencies": {
    "@codemirror/lang-markdown": "^6.4.0",
    "@codemirror/autocomplete": "^6.19.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.4",
    "@tailwindcss/postcss": "^4.1.14",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "^2.4.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@uiw/react-codemirror": "^4.25.2",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/xterm": "^5.5.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "gpt-tokenizer": "^3.0.1",
    "highlight.js": "^11.11.1",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-split": "^2.0.14",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@eslint/js": "^9.36.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^19.0.2",
    "terser": "^5.44.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
