{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "schaltwerk",
  "version": "0.1.0",
  "identifier": "com.mariuswichtner.schaltwerk",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Schaltwerk",
        "maximized": true,
        "width": 1920,
        "height": 1080,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "publisher": "Marius Wichtner",
    "copyright": "Â© 2024 Marius Wichtner",
    "category": "DeveloperTools",
    "shortDescription": "Visual interface for managing Para sessions",
    "longDescription": "Schaltwerk provides a powerful terminal-based interface for managing and monitoring Para development sessions with real-time status updates.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "11.0",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
